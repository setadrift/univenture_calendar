{
  "extends": "@finsweet/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "$utils/*": ["src/utils/*"]
    },
    "types": ["@finsweet/ts-utils"],
    "outDir": "dist",
    "module": "esnext",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true
  },
  "ignoreDeprecations": ["importsNotUsedAsValues:5.0"]
}
